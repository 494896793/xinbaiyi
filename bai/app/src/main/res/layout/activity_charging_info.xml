<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/img_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_left_arrow_white"
            android:paddingLeft="@dimen/title_lnr_padding"
            android:paddingRight="@dimen/title_lnr_padding"
            android:paddingTop="@dimen/title_tnb_padding"
            android:paddingBottom="@dimen/title_tnb_padding" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:background="@drawable/bg_charging_info_rg"
            android:padding="2dp">

            <RadioButton
                android:id="@+id/radio_charging_record"
                style="@style/RadioButton_Title"
                android:text="@string/charging_record_title"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radio_charging_statistics"
                style="@style/RadioButton_Title"
                android:text="@string/charging_statistics_title" />

        </RadioGroup>

    </RelativeLayout>

    <www.qisu666.com.widget.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </www.qisu666.com.widget.CustomViewPager>

</LinearLayout>